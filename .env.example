# ============================================
# BrainTestStudio - Umgebungsvariablen
# ============================================
# WICHTIG: Kopiere diese Datei zu .env und passe die Werte an!
# Die .env Datei wird NICHT in Git committed!
# ============================================

# --------------------------------------------
# ALLGEMEINE KONFIGURATION
# ============================================
# DEBUG Modus: Aktiviert Debug-Features (User Switcher, etc.)
# Kann NICHT über GUI geändert werden - nur über .env + Neustart!
# Frontend nimmt nur Variablen mit VITE_ Prefix!
VITE_DEBUG=false

# Domain für das Projekt
VITE_SITE_URL=http://localhost:3000
VITE_API_EXTERNAL_URL=http://localhost:8000

# Supabase Frontend Konfiguration
VITE_SUPABASE_URL=http://localhost:8000
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# E-Mail Adresse für Benachrichtigungen
ADMIN_EMAIL=deine-email@example.com

# ============================================
# BACKEND-Konfiguration (nur Docker)
# ============================================

# Docker Volumes
DOCKER_DATA_PATH=./docker-data
POSTGRES_DATA_PATH=./docker-data/postgres
N8N_DATA_PATH=./docker-data/n8n
SUPABASE_STORAGE_PATH=./docker-data/supabase-storage
OLLAMA_DATA_PATH=./docker-data/ollama

# Ports
FRONTEND_PORT=3000
N8N_PORT=5678
SUPABASE_STUDIO_PORT=3001
SUPABASE_API_PORT=8000
POSTGRES_PORT=5432
OLLAMA_PORT=11434

# PostgreSQL / Supabase Datenbank
POSTGRES_PASSWORD=change_to_secure_password
POSTGRES_USER=postgres
POSTGRES_DB=postgres

# Supabase Secrets
JWT_SECRET=your-jwt-secret-min-32-chars
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key
DASHBOARD_PASSWORD=your-dashboard-password

# N8N
N8N_WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=your-encryption-key-min-32-chars
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-n8n-password

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER_NAME=BrainTestStudio
